<% provide(:class_text, "edit") %>
<% provide(:button_text, "更新") %>
<div class="modal-dialog modal-md modal-dialog-centered">
  <div class="modal-content">
    <div class="col-md-12">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row justify-content-md-center">
        <div class="col-md-8 col-offset-2 center">
          <p><%= @repair.customer_name %></p>
          <p><%= @repair.machine_model %></p>
          <%= form_with(model: @repair, url: update_progress_path(@repair), local: true, method: :patch) do |f| %>
            <% if @repair.progress == 1  %>
              <%= f.radio_button :progress, 2 %>
              <%= f.label "完了", class: "label-#{yield(:class_text)}" %>
            <% else %>
              <%= f.radio_button :progress, 1 %>
              <%= f.label "未完了に戻す", class: "label-#{yield(:class_text)}" %>
            <% end %>
            <div>
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
