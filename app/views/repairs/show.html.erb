<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <h1>修理詳細</h1>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <table class="table table-bordered table-condensed table-repair-show">
        <tbody>
          <tr>
            <th><%= Repair.human_attribute_name :reception_day %></th>
            <td colspan="3">
              <%= @repair.reception_day.strftime("%Y年%-m月%d日") %>
              (<%= $days_of_the_week[@repair.reception_day.wday] %>)
            </td>
          </tr>
          <tr>
            <th width="100"><%= Repair.human_attribute_name :customer_name %></th>
            <td colspan="3"><%= @repair.customer_name %></td>
          </tr>
          <tr>
            <th><%= Repair.human_attribute_name :address %></th>
            <td colspan="3"><%= blank_text(@repair.address) %></td>
          </tr>
          <tr>
            <th><%= Repair.human_attribute_name :phone_number %></th>
            <td><%= blank_text(@repair.phone_number) %></td>
            <th width="150"><%= Repair.human_attribute_name :mobile_phone_number %></th>
            <td><%= blank_text(@repair.mobile_phone_number) %></td>
          </tr>
        </tbody>
        <table class="table table-bordered table-condensed table-repair-show">
          <tbody>
            <tr>
              <th width="100"><%= Repair.human_attribute_name :machine_model %></th>
              <td><%= blank_text(@repair.machine_model) %></td>
              <td colspan="3"><%= @repair.category %></td>
            </tr>
            <tr>
              <th><%= Repair.human_attribute_name :condition %></th>
              <td colspan="4"><%= @repair.condition %></td>
            </tr>
            <tr>
              <th><%= Repair.human_attribute_name :note %></th>
              <td colspan="4"><%= @repair.note %></td>
            </tr>
            <tr>
              <th><%= Repair.human_attribute_name :progress %></th>
              <td colspan="2"><%= @repair.progress %></td>
              <td>完了日(demo)</td>
              <td>担当(demo)</td>
            </tr>
          </tbody>
        </table>
      </table>
    </div>
    <div class="modal-footer">
      <div class="center">
      <button type="button" class="btn btn-lg btn-secondary" data-dismiss="modal">戻る</button>
      </div>
    </div>
  </div>
</div>
