<% provide(:class_text, "edit") %>
<% provide(:button_text, "更新") %>
<div class="modal-dialog modal-md modal-dialog-centered">
  <div class="modal-content">
    <div class="col-md-12">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row justify-content-md-center">
        <div class="col-md-8 col-offset-2 center">
          <table class="table table-bordered table-condensed">
            <tr>
              <td><%= @repair.customer_name %></td>
              <td><%= @repair.machine_model %></td>
            </tr>
          </table>
          <%= form_with(model: @repair, url: update_contacted_path(@repair), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-condensed">
              <tr>
                <td>
                  <%= f.radio_button :contacted, 2 %>
                  <%= f.label "連絡済", class: "label-#{yield(:class_text)}" %>
                  &emsp;&emsp;
                  <%= f.radio_button :contacted, 1 %>
                  <%= f.label "未連絡", class: "label-#{yield(:class_text)}" %></td>
              </tr>
            </table>
            <div>
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
