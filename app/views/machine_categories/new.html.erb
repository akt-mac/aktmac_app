<% provide(:title, "製品種目登録") %>
<% provide(:class_text, "new") %>
<% provide(:button_text, "新規登録") %>
<h1>製品種目登録</h1>
<div class="row justify-content-md-center">
  <div class="col col-md-6 col-md-offset-3">
    <%= form_with(model: @machine_category, local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @machine_category } %>

      <%= f.label :code, class: "label-#{yield(:class_text)}" %>
      <%= f.number_field :name, class: "form-control" %>

      <%= f.label :product, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :email, class: "form-control" %>

      <div class="center">
        <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-#{yield(:class_text)}" %>
      </div>
    <% end %>

  </div>
</div>
