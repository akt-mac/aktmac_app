<% provide(:title, "") %>
<div class="container">
  <div class="center jumbotron jumbotron-fluid">
    <div class="row justify-content-md-center top-login">
      <div class="col-md-4 col-md-offset-4">
        <% if logged_in? %>
          <h1>ログイン中です。</h1>
        <% else %>
          <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
            <p><%= f.label "メールアドレス", class: "label-login" %></p>
            <%= f.email_field :email, class: 'form-control' %>

            <p><%= f.label "パスワード", class: "label-login" %></p>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
              <%= f.check_box :remember_me, id: "remember-me" %>
              <span>ログイン情報を記憶する</span>
            <% end %>
            <div class="center">
              <%= f.submit "ログイン", class: "btn btn-primary btn-login" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
